  <body <%= @paypal_redirect %> <%= "id='#{@page_id}'" if @page_id %> class="<%= @current_controller %><%= " #{@class}" if @class %>" <%= "onload='#{@onload}'" if @onload %>>
    <div id="content">
      <div id="topContent">
        <%#= link_to image_tag('logo.png', :alt => "Italian wine and food", :title => "Italian wine and food"), root_path, :id => "logo" %>
        <%= link_to image_tag('logo_hi_res.gif', :alt => "Italian wine and food", :title => "Italian wine and food"), root_path, :id => "logo" %>
        <div id="cartLogin">

          <div id="googleplus_lg">
              <!-- Place this tag where you want the +1 button to render --><g:plusone></g:plusone>
          </div>
          <div id="cart"><%= render :partial => "/site/shared/cart" %></div>

          <div id="logIn">

            <!-- Remove this line and uncomment the other lines when u go live -->
            <%# support_link = "Closed" -%>
            <%    @support_user = Setting.find(:first).support
                   @support_status = Juggernaut.show_client(@support_user) ? true : false rescue false
                   if @support_status == true
                      support_link = "available"
                   else
                      support_link = "unavailable"
                   end
                    %>
            <% if logged_in? %>
                      Welcome <%= current_user.name %> <% if current_user.type_id == 1 %> | <%= link_to "Admin Site",siteadmin_path %><% end %> |

                      <% if Message.find(:all,:conditions=>['user_id = ?',current_user.id]).count > 0 %>
                        <%= link_to "My Account",  :controller=>'site/customers',:action=>'show',:id=>current_user.id  %> |
                      <% else %>
                        <%= link_to "My Account", account_path %> |
                      <% end %>
                      <%= link_to "Log out", logout_path %>
            <% else %>
                      <%= link_to "Log in", login_path %> | <%= link_to "Sign up", signup_path %>
            <% end %>
          </div>
          <br /><div style="clear: both;"></div>
          <div style="margin-right:170px;text-align:right;">

            <% if logged_in? %>

                      <span style="font:bold 13px Arial;"><%= link_to "Live chat (#{support_link})",chat_index_path, :popup => ['new_window_name', 'height=540,width=490'] %></span>
            <% else %>
                      <span style="font:bold 13px Arial"><%= link_to "Live chat (#{support_link})",chat_index_path, :popup => ['new_window_name', 'height=540,width=490,resizable=yes,scrollbars=auto'] %></span>
            <% end %>


          </div>

          <div style="clear: both;"></div>
          <div id="search_form">
            <%- form_tag search_index_path, :method => :get do -%>
              <table>
                <tr>
                  <td>Search: <%= text_field_tag :text, params[:text], :style=>"width:110px" %></td>
                  <td>
                    <%= select_tag :id, options_for_select([['Wine', 'wine'], ['Food', 'food'], ['Recipe', 'recipe'],['Hampers','hampers'], ['People', 'people'],['Chef', 'chef'],['All Site','all']], (params[:id] || params[:category])) %>
                  </td>
                  <td>
                    <%= image_submit_tag("searchButton.gif", :name => nil, :alt => "search") %>


                  </td>
                </tr>
              </table>
            <%- end -%>
          </div>

        </div>
        <div id="nav">
          <%- active_uri = request.request_uri -%>
          <ul class="nav1">
            <!--<li id="link-to-home" class="first<%#= " active" if active_uri == "/"%>"><%#= link_to "Home", root_path %></li>-->
            <% for category in Category.find(:all, :conditions => ["parent_id is ? AND show_in_menu = ?", nil, true], :order => "menu_order asc" ) do %>

                <li id="link-to-<%= category.friendly_identifier %>" <%= 'class="active"' if active_uri == "/#{category.friendly_identifier}"   %>>



                  <%#= link_to category.name, "/#{category.friendly_identifier == "events" ? "wine-events" : category.friendly_identifier}" %>
                   <%= link_to category.name, "/#{category.friendly_identifier}" %>

                  <%- unless category.children.blank? -%>
                    <ul>
                      <%- for child in category.children -%>
                        <% num_products = find_any_active_product_exists(child.products)  %>
                        <li><%= link_to(child.name, nested_categories_url(category, child)) if num_products > 0 %></li>
                      <%-  end -%>
                      <li><%= link_to("Special Offers", nested_categories_url(category, "offer"),:type => "special_offer")  %></li>
                    </ul>
                  <%- end -%>
                </li>
              <%- end -%>

                    <!--<li class="<%#= " active" if active_uri == "/wine-club" %>"><%#= link_to "Wine Club", :action=>"wine_club", :controller=>"site/base" %></li>-->
              <li id="link-to-forum" <%= 'class="active"' if active_uri == "/wine-community" %>><%= link_to "Community", wine_community_path %></li><!-- earlier it was if active_uri == "/forums" problem when mouser hover in this case -->
              <li id="link-to-recipes" <%= 'class="active"' if active_uri == "/recipes" %>><%= link_to "Recipes", recipes_path  %>
               </li>
              <li id="link-to-blog" class="last<%= " active" if active_uri == "/blog" %>"><%= link_to "Blog", blog_index_path %></li>

            </ul>
            <div style="clear:both;"></div>
            <%= content_tag(:div, @breadcrumbs, :class => "breadcrumbs") if @breadcrumbs %>
            <div class="breadcrumbs" >&nbsp;&nbsp;&nbsp;
            <strong>
            <% if logged_in? and !(current_user.orders.blank?)%>
            <% show_link = check_any_products_remains_for_review(current_user.orders) %>
            <% if show_link == true %>
                <span class="data"><%= link_to 'Why not review the products you bought?',:controller=>'orders',:action=>'show_order_details' %></span>
            <% end %>
            <% end %>
            </strong>
            </div>
            <%#= content_tag(:div, @setting.promotion, :id => "promotion") %>
            <div id="promotion"><%= render :partial => "/site/shared/promotion" %></div>
          </div>
        </div>
        <div style="clear:both;"></div>
        <div id="mainContent">
          <%# if flash[:error] or flash[:notice] %>

         <!--   <div id="notice" style="font:bold italic large Palatino, serif;text-align:center;background:#F5F6CE" <% if flash[:error] %> color="red"<% else %> style="color:green;"<% end %>><%= flash[:error] || flash[:notice] %></div>
            <script type="text/javascript">
              setTimeout("new Effect.Fade('notice');", 12000)
            </script>
          <%# end %> -->
          <%#
          if !cookies[:display]
            cookies[:display] = {:value => 'true',
   :expires => 1.days.from_now }
          %>
         <!--  <script type="text/javascript">
           alert("We have just relaunched our website adding plenty of new functionality, we have done all tests and everything seems to be working fine, however, we ask you to be patience in case something does not work the way it is supposed to and please let us know so we can give it our immediate attention.");
           </script> -->
           <%#end%>


          <% if flash[:alert] %>
              <script type="text/javascript">
                document.observe('dom:loaded', function() {
                  alert("<%= flash[:alert] %>");
                });
              </script>
          <% end %>
          <%= content_tag(:div, (yield :right), :id => "rightColumn") if @content_for_right -%>

         <div id="leftColumnContent" <%= "class=\"widescreen\"" unless @content_for_right %>>



            <%= yield %>

          </div>

          </div>

        <%= render :partial => 'site/shared/footer' %>
      </div>

      <%- if RAILS_ENV == "production" -%>
        <script src="https://ssl.google-analytics.com/urchin.js" type="text/javascript">
        </script>
        <script type="text/javascript">
          _uacct = "UA-620606-1";
          urchinTracker();
        </script>
