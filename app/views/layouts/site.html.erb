<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(title) %></title>
    <link rel="shortcut icon" href="/images/italyabroad.ico" />
    <link rel="alternate" type="application/rss+xml" title="Italyabroad.com Products, Feed RSS 2.0" href="<%= products_url %>" />
    <link rel="alternate" type="application/rss+xml" title="Italyabroad.com Blog, Feed RSS 2.0" href="<%= blog_index_url %>" />
    <meta name="description" content="<%= h(description) %>" />
    <meta name="keywords" content="<%= h(keys) %>" />
    <meta name="copyright" content="italyabroad.com" />
    <meta http-equiv="content-language" content="EN" />
    <meta name="ROBOTS" content="INDEX,FOLLOW" />
    <meta name="creation_Date" content="09/21/2007" />
    <meta name="revisit-after" content="7 days" />
    <meta name="verify-v1" content="4MIDVULSRTLwLBnaUwWYWG+BeU+y0EpGRk33kFSVSYo=" />
    <meta name="msvalidate.01" content="18C4C4F5FBD1413AA93AEAD1738CD7F5" />
    <meta name="blogcatalog" content="9BC8939820" />
    <%= stylesheet_link_tag "site", "menu", "lightbox", :cache => true %>
    <%= javascript_include_tag :defaults, "dialog", "slide", "lightbox", :cache => true %>
    <!--[if gte IE 5.5]>
    <%= javascript_include_tag "menu" %>
	<![endif]-->
  </head>
  <body <%= @paypal_redirect %> <%= "id='#{@page_id}'" if @page_id %> class="<%= @current_controller %><%= " #{@class}" if @class %>" <%= "onload='#{@onload}'" if @onload %>>
    <div id="content">
      <div id="topContent">
        <%= link_to image_tag('logo.png'), root_path, :id => "logo" %>
        <div id="cartLogin">
          <div id="cart"><%= render :partial => "/site/shared/cart" %></div>
          <div id="logIn">
            <% if logged_in? %>
              <span style="font:bold 13px Arial"><%= link_to "Live chat",chat_index_path, :popup => ['new_window_name', 'height=500,width=490'] %></span> |
              Welcome <%= current_user.name %> <% if current_user.type_id == 1 %> | <%= link_to "Admin Site",siteadmin_path %><% end %> | <%= link_to "My Account", account_path %> | <%= link_to "Log out", logout_path %>
            <% else %>
              <span style="font:bold 13px Arial"><%= link_to "Live chat",chat_index_path, :popup => ['new_window_name', 'height=500,width=490'] %></span> |
              <%= link_to "Log in", login_path %> | <%= link_to "Sign up", signup_path %>
            <% end %>
          </div>

          <div style="clear: both;"></div>
          <div id="search_form">
            <%- form_tag search_index_path, :method => :get do -%>
              <table>
                <tr>
                  <td>Search: <%= text_field_tag :text, params[:text], :style=>"width:110px" %></td>
                  <td>
                    <%= select_tag :id, options_for_select([['Wine', 'wine'], ['Food', 'food'], ['Recipe', 'recipe'], ['People', 'people']], (params[:id] || params[:category])) %>
                  </td>
                  <td>
                    <%= image_submit_tag("searchButton.gif", :name => nil, :alt => "search") %>
                  </td>
                </tr>
              </table>
            <%- end -%>
          </div>

        </div>
        <div id="nav">
          <%- active_uri = request.request_uri -%>
          <ul class="nav1">
            <!--<li id="link-to-home" class="first<%#= " active" if active_uri == "/"%>"><%#= link_to "Home", root_path %></li>-->
            <% for category in Category.find(:all, :conditions => ["parent_id is ? AND show_in_menu = ?", nil, true] ) do %>
                <li id="link-to-<%= category.friendly_identifier %>" <%= 'class="active"' if active_uri == "/#{category.friendly_identifier}" %>>
                  <%= link_to category.name, "/#{category.friendly_identifier == "events" ? "wine-events" : category.friendly_identifier}" %>
                  <%- unless category.children.blank? -%>
                    <ul>
                      <%- for child in category.children -%>
                        <li><%= link_to(child.name, nested_categories_url(category, child)) if child.products.size > 0 %></li>
                      <%- end -%>
                      <li><%= link_to("Special Offers", nested_categories_url(category, "offer"),:type => "special_offer")  %></li>
                    </ul>
                  <%- end -%>
                </li>
              <%- end -%>

                    <!--<li class="<%#= " active" if active_uri == "/wine-club" %>"><%#= link_to "Wine Club", :action=>"wine_club", :controller=>"site/base" %></li>-->
              <li id="link-to-forum" <%= 'class="active"' if active_uri == "/forums" %>><%= link_to "Community", wine_community_path %></li>
              <li id="link-to-recipes" <%= 'class="active"' if active_uri == "/recipes" %>><%= link_to "Recipes", recipes_path  %></li>
              <li id="link-to-blog" class="last<%= " active" if active_uri == "/blog" %>"><%= link_to "Blog", blog_index_path %></li>


            </ul>
            <div style="clear:both;"></div>
            <%= content_tag(:div, @breadcrumbs, :class => "breadcrumbs") if @breadcrumbs %>
            <%#= content_tag(:div, @setting.promotion, :id => "promotion") %>
            <div id="promotion"><%= render :partial => "/site/shared/promotion" %></div>
          </div>
        </div>
        <div style="clear:both;"></div>
        <div id="mainContent">
          <% if flash[:error] or flash[:notice] %>
            <div id="notice" style="font:bold italic large Palatino, serif;text-align:center;background:#F5F6CE" <% if flash[:error] %> color="red"<% else %> style="color:green;"<% end %>><%= flash[:error] || flash[:notice] %></div>
            <script type="text/javascript">
              setTimeout("new Effect.Fade('notice');", 12000)
            </script>
          <% end %>
          <% if flash[:alert] %>
              <script type="text/javascript">
                document.observe('dom:loaded', function() {
                  alert("<%= flash[:alert] %>");
                });
              </script>
          <% end %>
          <%= content_tag(:div, (yield :right), :id => "rightColumn") if @content_for_right -%>
          <div id="leftColumnContent" <%= "class=\"widescreen\"" unless @content_for_right %>>

            <%= yield %>

          </div>
        </div>
        <%= render :partial => 'site/shared/footer' %>
      </div>
      <%- if RAILS_ENV == "production" -%>
        <script src="https://ssl.google-analytics.com/urchin.js" type="text/javascript">
        </script>
        <script type="text/javascript">
          _uacct = "UA-620606-1";
          urchinTracker();
        </script>
      <%- end -%>
    </body>
  </html>

