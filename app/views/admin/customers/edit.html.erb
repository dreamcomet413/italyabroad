<%- @title = "Edit #{@user.name}"; @page_id = "Administration" -%>
<%- @breadcrumbs = "Administration &raquo; #{link_to "Customers", admin_customers_path} &raquo; #{@title}" -%>

<div class="inner_content">
  <h2><%= @title %></h2>
  <br />
  <% form_for :user, :url => admin_customer_path(@user), :html => {:method => :put} do %>
  	<%= render :partial => "form" %>
  	<p><%= submit_tag "Save" %></p>
  <% end %>
</div>