<%= render partial: 'title'%>
<div class="inner_content settings" id="admin_settings_edit">
  <h2>Settings</h2>
	<br/>
	<% form_for(:small_box_setting,  :url => admin_small_box_settings_path(@small_box_setting) , :html => { :multipart => true , :method=> :put }) do |form| %>
    <br/>

	  <% @small_box_settings.each do |sb|%>
		
	    <%if sb and sb.image %>
	    	<table>
		      <tr>
		        <td valign="top" style="padding:0;">Image&nbsp;&nbsp;</td> 
		        <td><%= file_field_tag :image %> <em>(must 723x284px)</em></td>
		      </tr>
		    </table>
	    	<%= image_tag(sb.image.image_filename.url) %>
	    	<%= link_to "Destroy", "/admin/small_box_settings/#{sb.id}", :confirm => "Are you sure?", :method => :delete %>
	    <%end%>
	    <br/>
	  <%end%>
	</div>
    <%=form.submit%>
<% end %>