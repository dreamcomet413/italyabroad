<%= stylesheet_link_tag 'widgEditor' %>
<%= javascript_include_tag "widgEditor" %>
<% @title = "New #{params[:type]}"; @page_id = "contact_message" %>
<%- @breadcrumbs = "Content Management &raquo; #{link_to params[:type]}" -%>
<br/>
  <h2><%= params[:type] %></h2>
  <br />
<% form_tag admin_contact_messages_path,:multipart=>true do %>
  <div><%= flash[:notice] %></div>
    <p>
     Header:<br /><%= text_field :contact_message, :header %>
    </p>
    <p>
      Message:<br /><%= text_area :contact_message, :message, :rows => 8, :class=>"widgEditor" %><br />
      You can also use HTML tag.
    </p>
    <p>
      Phone:<br /><%= text_field :contact_message, :phone %>
    </p>
    <p>
      Email:<br /><%= text_field :contact_message, :email %>
    </p>
    <p>
      Short text:<br /><%= text_field :contact_message, :footer %>
    </p>      
    <p>
      <%= submit_tag "Save" %>
    </p>
<% end %>