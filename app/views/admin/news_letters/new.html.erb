<%- @title = "New Letter"; @page_id = "News Letters" -%>
<%- @breadcrumbs = "News Letters &raquo; #{link_to "Letters", admin_news_letters_path} &raquo; #{@title}" -%>

<div class="inner_content news_letters" id="admin_news_letters_new">
  <h2><%= @title %></h2>
  <br />
  <%= render :partial => 'sub_links' %>
  <%= form_for :news_letter, :url => admin_news_letters_path do -%>
    <%= render :partial => 'form' %>
    <p><%= submit_tag "Save" %> or <%= link_to "Cancel", admin_news_letters_path %></p>
  <%- end -%>
</div>