<h1>Editing <%= params[:type] %></h1>
<% form_tag admin_about_u_path,:id => @about_u.id, :method => 'put' ,:multipart=>true do  %>
  <%= error_messages_for :about_u %>
<fieldset>
  <%= hidden_field(:about_u, :link_type, :value => params[:type]) %>
    <p>
      <span style="font:normal 15px Arial;padding-right:60px">Title</span>
    <%= text_field :about_u, 'title',:size => 70 %>
  </p>
    <p>
    <div style="float:left;height:300px;font:normal 15px Arial;padding:110px 14px 0 0;">Description</div>
    <div><%= text_area :about_u, 'description', :cols => 80, :rows => 25 %>
    </div></p>
  <p>
  <p>
    <span style="font:normal 15px Arial;padding-right:60px">Image</span>
    <% fields_for :image do %>
    <%= file_field :image,:image_file %>
    <% end %>

  </p>
    <%= submit_tag 'Update' %> or <%= link_to "Cancel", admin_about_us_path(:type => @about_u.link_type) %>
  </p>
  </fieldset>
<% end %>
