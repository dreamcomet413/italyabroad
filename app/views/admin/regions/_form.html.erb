<table>
  <tr>
    <td valign="top">Name</td>
    <td><%= text_field :region, :name %></td>
  </tr>
  <tr>
    <td valign="top">Description</td>
    <td><%= text_area :region, :description %></td>
  </tr>
  <tr>
      <td>Quote on Region: </td>
      <td><%= text_field :region, :region_quote %></td>
    </tr>
   <tr>
		  <td >Active:</td>
		  <td><%= check_box :region, :active %>
    </tr>
    <tr>
    <td>Image</td>
    <% fields_for :image do %>
    <td><%= file_field :image,:image_file %>
    <%= image_tag(image_url('product_thumb', @region.image, :jpg)) if @region && @region.image %>
    <%= link_to "Destroy", admin_region_image_url(@region, @region.image), :confirm => "Are you sure?", :method => :delete if @region && @region.image %>

    </td>
     <% end %>
  </tr>
  <tr>
    <td valign="top">Producers in this region</td>
    <td><%= select :region, :producer_ids, Producer.find(:all,:order=>'name').collect { |p| [p.name, p.id] }, {}, {:multiple => true} %></td>
  </tr>
</table>

