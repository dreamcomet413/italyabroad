<% @title = "Your recent orders" %>
<%- @breadcrumbs = "#{link_to "Home", root_url} &raquo; My Orders and Tracking" -%>
<% @class = "no-padding" %>
<% total_points = current_user.find_total_points(current_user)
total_points_used = current_user.orders.sum('points_used')
    %>

<div id="header"><%= render :partial => 'site/shared/box_login' %></div>
<h4 class="account-title">Your recent orders <% if total_points - total_points_used > 0 %>  (You have <%= (total_points - total_points_used).to_i %> points in your credit.  This is equivalent to <%= number_to_currency ((total_points - total_points_used)* Setting.find(:first).points_to_pound.to_i, :unit => "&pound;") %>)<% end %></h4>
<br />
<table width="99%" align="center" style="text-align:center;" cellspacing="0" cellpadding="0" border="0">
	<tr>
	  <td><strong>Order No.</strong></td>
	  <td><strong>Sub Total</strong></td>
	  <td><strong>Order Placed</strong></td>
	  <td><strong>Last Action</strong></td>
	  <td><strong></strong></td>
	  <td>&nbsp;</td>
	</tr>
	<%= render :partial => 'order', :collection => @orders %>
</table>
<br /><br /><br />
<% content_for :right do %>
	<%= render :partial => '/site/shared/box_grape_guide' %>
<% end %>

