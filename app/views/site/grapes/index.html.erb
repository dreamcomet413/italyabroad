<% @title = "Guide to Italian wines and Italian grapes"; @description = "Guide to Italian wines and Italian grapes"; @keys = ", Italian wine information,Italian wine guide,Italian wine,Italian red and white wine,italian grapes,wine grapes,wine expert,guide to Italian wines,aglianico,barbera,montepulciano,nero d'avola,nebbiolo" %>
<% @breadcrumbs = "#{link_to("Home", root_url)} &raquo; Guide to Italian wines and Italian grapes" %>
<% @about = AboutU.find(:first, :conditions => {:link_type => "grape-guide"} ) %>
<div style="text-align:center;padding-top:10px;"></div>
<div id="blog_home">

  <span class="title">
    <%= @about.title if @about %>

  </span>
<%= image_tag("guide_home_image.jpg") %></div>
<br />
<div id="blog_container">
   <%= @about.description rescue 'The wine and grape details ...' %> <br />
   <div style="float:right;">
  <%- form_tag grapes_path, :method => :get do -%>
    <strong>Search</strong><%= text_field_tag 'search_by_name',params[:search_by_name] %>
    <%= submit_tag 'Search', :name => 'search' %>
  <% end %>
  </div> <br />
   <div><%= will_paginate_(@grapes) %></div>
<% if @grapes && @grapes.size > 0 %>
	<ul>
	<% for grape in @grapes %>
	  <li>
      <h2><%= link_to grape.name, grape.friendly_identifier.blank? ? "grapes/#{grape.id}" : "grapes/#{grape.friendly_identifier}" %><%#= show_region_image(region) %></h2>
      <%#= show_region_image(region) %>
      <div><% unless grape.description.blank? %>
      <%= grape.description[0,250] %>
       <%- end -%>
      </div>

      <table width="100%" class="foot">
        <tr>

          <td align="right">

          </td>
        </tr>
      </table>
    </li>
  <% end %>
  </ul>
<div><%= will_paginate_(@grapes) %></div>
<%- end -%><br />


  <h3 style="font-size:16px;border:none;margin-bottom:0;">Grape list, click for information</h3>
  <br />
  <table cellpadding="5" cellspacing="0" border="0" width="100%">
    <tr>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">A-G</h4>
        <br />
        <ul class="clean" style="list-style:none;">
          <%- for grape in @grapes_all -%>
          <li><%= link_to grape.name, grape_path(grape) if grape.name.upcase =~ /^[A-G]/ %></li>
          <%- end -%>
        </ul>
      </td>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">M-R</h4>
        <br />
        <ul class="clean" style="list-style:none;">
          <%- for grape in @grapes_all -%>
          <li><%= link_to grape.name, grape_path(grape) if grape.name.upcase =~ /^[M-R]/ %></li>
          <%- end -%>
        </ul>
      </td>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">S-Z</h4>
        <br />
        <ul class="clean" style="list-style:none;">
          <%- for grape in @grapes_all -%>
          <li><%= link_to grape.name, grape_path(grape) if grape.name.upcase =~ /^[S-Z]/ %></li>
          <%- end -%>
        </ul>
      </td>
    </tr>
  </table>
</div>

<%- content_for :right do -%>
  <%= render :partial => 'site/shared/box_event' %>
  <br />
  <%= render :partial => 'site/shared/box_subscriptions' %>
  <br />
  <%= render :partial => 'site/shared/box_wine_tours' %>
  <br />
  <%= render :partial => 'site/shared/box_recipes' %>
  <br />
  <%= render :partial => 'site/shared/box_popular' %>
<%- end -%>

