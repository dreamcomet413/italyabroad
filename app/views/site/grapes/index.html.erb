<% @title = "Guide to Italian wines and Italian grapes"; @description = "Guide to Italian wines and Italian grapes"; @keys = ", Italian wine information,Italian wine guide,Italian wine,Italian red and white wine,italian grapes,wine grapes,wine expert,guide to Italian wines,aglianico,barbera,montepulciano,nero d'avola,nebbiolo" %>
<% @breadcrumbs = "#{link_to("Home", root_url)}&raquo; #{link_to('Community',wine_community_path)} &raquo; Guide to Italian wines and Italian grapes".html_safe() %>
<% @about = AboutU.find(:first, :conditions => {:link_type => "grape-guide"} ) %>
<% if @about.present? and @about.image.present? %>
    <div class="main-banner"><%= link_to image_tag(site_image_url(:about_thumb, @about.image, :jpg),:alt=>@about.title) , site_search_index_path(:id => "grapes") unless @about.blank? %></div>
  <% else %>
    <div class="main-banner"><%= link_to image_tag("guide_home_image.jpg",:alt=>'Grape guide'), site_search_index_path(:id => "grapes") %></div>
  <% end %>
  <div class="row">
    <div class="search-blog-wrapper clearfix">
      <div class="col-md-9 col-md-offset-3 clearfix">
        <div class="search-blog-box clearfix"> 
          <div class="blog-search-text">Grape Search</div>
            <div class="blog-search-field">
              <%- form_tag site_grapes_path, :method => :get do -%>
              <%= text_field_tag 'search_by_name',params[:search_by_name], :class => 'blog-search' %>
              <i class="magnifier">
                <%= image_submit_tag ("/images/magnifier.png"), :name => 'search', :value => 'search' %> </i>
                <%# submit_tag 'Search', :name => 'search' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="one-colum-row clearfix">
      <div class="col-md-12">
        <!-- Start Search Results-->
        <% if params[:search] %>
          <% if @grapes && @grapes.size > 0 %>
            <% for grape in @grapes %>
              <div class="green-heading-with-border"><%= link_to grape.name, grape.friendly_identifier.blank? ? "grapes/#{grape.id}" : "grapes/#{grape.friendly_identifier}" %>
              </div>
              <div class="bottom-50">
                <% unless grape.description.blank? %>
                  <%= grape.description[0,250] %> 
                  <%= link_to "Read More", grape.friendly_identifier.blank? ? "grapes/#{grape.id}" : "grapes/#{grape.friendly_identifier}" %>
                <%- end -%>
              </div>
            <% end %>
            <div><%= will_paginate_(@grapes) %></div>
          <%- end -%>
        <% end %> <!-- End Search Results-->
        <% if !@about.nil? %>
          <% unless @about.title.blank? %>
            <div class="green-heading-with-border">Wine Grapes</div>
          <% end %>
        <% end %>
        <div class="bottom-50">
          <%= @about.description.html_safe() rescue 'The wine and grape details ...' %> 
        </div>
        <div class="green-heading-2">Grape list, click for information</div>
        <div class="row clearfix grape-list">
          <div class="col-md-3 col-xs-6">
            <div class="green-heading">A-H</div>
            <%- for grape in @grapes_all -%>
              <% if grape.name.upcase =~ /^[A-H]/  %>
                <div>
                  <%= link_to(grape.name, site_grape_path(grape), :title => grape.name) if grape.name.upcase =~ /^[A-H]/ %>
                </div>
              <% end %>
            <%- end -%>
          </div>
          <div class="col-md-3 col-xs-6">
            <div class="green-heading">I-P</div>
            <%- for grape in @grapes_all -%>
              <%- if grape.name.upcase =~ /^[I-P]/ -%>
                <div><%= link_to(grape.name, site_grape_path(grape), :title => grape.id) %></div>
              <%- end -%>
            <%- end -%>
          </div>
          <div class="col-md-3 col-xs-6">
            <div class="green-heading">Q-Z</div>
            <%- for grape in @grapes_all -%>
              <% if grape.name.upcase =~ /^[Q-Z]/ %>
                <div><%= link_to grape.name, site_grape_path(grape)  %></div>
              <% end %>
            <%- end -%>
          </div>
        </div>
      </div>
    </div>
  </div>
  


