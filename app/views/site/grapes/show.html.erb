<% @title = "#{@grape.name}"; @class= "no-padding"; @breadcrumbs = "#{link_to("Home", root_url)} &raquo; #{link_to ('Community',wine_community_path)} &raquo; #{link_to("Grapes", grape_guide_path)} &raquo; #{@grape.name}" %>

<div id="header"><%= @grape.name %></div>
<br />
<div>
  <table id="producers_banner">

   <tr><td width="50%" ><%#= show_grape_image(@grape) -%>
    <% if @grape && @grape.image %>

        <%= image_tag(image_url('recipe', @grape.image, :jpg),:alt=>@grape.name) %>
        <% else %>
        <%= image_tag("grape_default.png",:alt=>@grape.name) %>
        <% end %>


   </td>

   <td width="50%" style="font-size:20px;font-weight:lighter"> <%= @grape.grape_quote %></td>
    <!--A <strong style="font-size:30px;">blog</strong> dedicated entirely to<br />
    <strong style="font-size:30px;">Italian wine,</strong> follow us in our<br />
    discovery journey, <strong style="font-size:30px;">read news</strong><br />
    and our <strong style="font-size:30px;">views</strong> on Italian wine-->
</tr></table>
</div>

<!--<div style="text-align:center;padding-top:10px;"><%#= image_tag("guide_home_image.jpg") %></div> -->
<div style="margin-left:10px;margin-right:10px;">
 <!-- <h1 style="text-align:center;font-size:18px;font-weight:bold;color:#666666;margin-bottom:30px">Grape Information</h1> -->
  <div style="float:left;margin-right:20px;"><%#= show_grape_image(@grape) %></div><br />
  <p style="text-align:justify;margin-left:10px;margin-right:10px;"><%= @grape.description || "No Description" %></p>
  <div style="clear:both;"></div>
  <br />
  <%- if @grape.producers.size >0 -%>
  <br /><h3 style="font-size:16px;color:#013300;border:none;">Producers that grow this grape</h3>
  <%-end-%>
  <ul style="list-style:none;margin:0;padding:0;">
    <%- @grape.producers.each do |producer| -%>
    <li><%= link_to producer.name, producer_path(producer) %></li>
    <%- end -%>
  </ul>
  <br />
  <% @grape_products = @grape.products.find(:all,:conditions=>['active = ? and quantity > ?',true,0])%>
  <%- if  @grape_products.size>0 -%>
  <br /><h3 style="font-size:16px;color:#013300;border:none;">&nbsp;&nbsp;&nbsp;Wines made with this grape</h3>
  <%- end -%>
  <ul style="list-style:none;margin:0;padding:0;text-align:center;">
    <%- @grape_products.each do |product| -%>
    <li style="float:left;width:100px;margin-left:10px;margin-bottom:10px;">
      <%= link_to show_image_tag(product.layout_image, product.image_1, :jpg,product.name), nested_products_uri(product) %><br />
      <%= link_to product.name, nested_products_uri(product) %>
    </li>
    <%- end -%>
  </ul>
</div>

<%- content_for :right do -%>
  <%= render :partial => 'site/shared/box_event' %>
  <br />
  <%= render :partial => 'site/shared/box_subscriptions' %>
  <br />
  <%= render :partial => 'site/shared/box_wine_tours' %>
  <br />
  <%= render :partial => 'site/shared/box_recipes' %>
  <br />
  <%= render :partial => 'site/shared/box_popular' %>
<%- end -%>

