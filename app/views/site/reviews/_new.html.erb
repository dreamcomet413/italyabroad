<%= content_tag :p, flash[:notice] %>
<% form_for :review, :url => create_url do %>
<!-- div class="add_new_review" -->
  Title:<br />
  <%= text_field :review, :name %><br />

  Body:<br />
  <%= text_area :review, :description, :rows => 5, :style => "width:50%" %><br />

  Rate: <%= select :review, :score, [5,4,3,2,1] %>
  <%= submit_tag 'Submit' %>
<!-- /div -->
<% end %>

