<script>
function validate_review(){
 if (document.getElementById('review_name').value == ""){

 alert("Title must be filled out");
 return false;

 }
if (document.getElementById('review_description').value == ""){
alert("Description must be filled out");
 return false;

}


}
</script>
<%= content_tag :p, flash[:notice] %>
<% form_for :review, :url => create_url do %>
<!-- div class="add_new_review" -->
  Title:<br />
  <%= text_field :review, :name %><br />
  <% if product_id.present? %>
        <input type="hidden" name="product_id" value="<%=product_id %>">
  <% end %>
  <% if recipe_id.present? %>
        <input type="hidden" name="recipe_id" value="<%=recipe_id %>">
  <% end %>

  Body:<br />
  <%= text_area :review, :description, :rows => 5, :style => "width:50%" %><br />

  Rate: <%= select :review, :score, [5,4,3,2,1] %>
  <%= submit_tag 'Submit',:onclick=>"validate_review();" %>

   <div align="right" style="float:right">
    <a href="http://www.facebook.com/sharer.php?u=<%= "#{request.url}" -%>&t=<%= "#{request.url}" -%>" target="blank"><img style="padding-bottom:1px;" src="/images/facebook.gif" alt="facebook" name="facebook" border="0" id="facebook"></a>

              <a href="https://twitter.com/share" class="twitter-share-button" data-count="none">Tweet</a>
