<script>
function validate_review(){
  if (document.getElementById('review_name').value == ""){

   alert("Title must be filled out");
   return false;
  }
  if (document.getElementById('review_description').value == ""){
  alert("Description must be filled out");
   return false;

  }
}
</script>
<%= content_tag :p, flash[:notice] %>
<% form_for :review, :url => create_url do %>
  <div class="write-review-wrapper">
    <div class="clearfix bottom-15">
      <div class="col-xs-2 col-md-1">Title:</div>
      <div class="col-xs-9 col-md-5"><%= text_field :review, :name %></div>
    </div>
    <% if defined? product_id %>
      <input type="hidden" name="product_id" value="<%=product_id %>">
    <% end %>
    <% if defined? recipe_id %>
      <input type="hidden" name="recipe_id" value="<%=recipe_id %>">
    <% end %>
    <div class="clearfix bottom-15">
      <div class="col-xs-2 col-md-1">Body:</div>
      <div class="col-xs-9 col-md-5">
        <%= text_area :review, :description %>      
      </div>
    </div>
    <div class="clearfix bottom-15">
      <div class="col-xs-2 col-md-1">Rate</div>
      <div class="col-md-2 col-xs-3"><%= select :review, :score, [5,4,3,2,1] %></div>
      <div class="col-md-2 col-xs-3"><%= submit_tag 'Submit',:onclick=>"validate_review();" %></div>
    </div>
  </div>
<% end %>

