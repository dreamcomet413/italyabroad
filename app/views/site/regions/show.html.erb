    <%#- @region.products.each do |product| -%>
    <li style="float:left;width:100px;margin-left:10px;margin-bottom:10px;">
      <%#= link_to show_image_tag(product.layout_image, product.image_1, :jpg), nested_products_uri(product) %><br />
      <%#= link_to product.name, nested_products_uri(product) %>
    </li>  -->
    <%#- end -%>
 <!-- </ul> -->


  <div style="clear:both;"></div>
  <br /><br />
  <br />
</div>

