  <div style="clear:both;"></div><br />
  <div style="float:right;">
  <%- form_tag regions_path, :method => :get do -%>
    <strong>Region Search</strong><%= text_field_tag 'search_by_name',params[:search_by_name] %>
    <%= submit_tag 'Search', :name => 'search' %>
  <% end %>
  </div>
  <br />
  <br />
  <!-- Alphabetical listing of regions added by Sujith on 2011.jan.28 START -->






  <h3 style="font-size:16px;border:none;margin-bottom:0;">Regions list, click for information</h3>
  <br />
  <table cellpadding="5" cellspacing="0" border="0" width="100%">
    <tr>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">A-G</h4>
        <br />
        <ul class="clean" style="list-style:none;">

          <%- for region in @regions_all  -%>


           <li><%= link_to region.name, region_path(region) if region.name.upcase =~ /^[A-G]/ %></li>
          <%- end -%>
        </ul>
      </td>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">M-R</h4>
        <br />
        <ul class="clean" style="list-style:none;">
          <%- for region in @regions_all -%>
          <li><%= link_to region.name, region_path(region) if region.name.upcase =~ /^[M-R]/ %></li>
          <%- end -%>
        </ul>
      </td>
      <td valign="top" style="width:33%;">
        <h4 style="margin:0;padding:0;">S-Z</h4>
        <br />
        <ul class="clean" style="list-style:none;">
          <%- for region in @regions_all -%>
          <li><%= link_to region.name, region_path(region) if region.name.upcase =~ /^[S-Z]/ %></li>
          <%- end -%>
        </ul>
      </td>
    </tr>
  </table>







<!-- Alphabetical listing of regions added by Sujith on 2011.jan.28 END --><br />

 <% if params[:search] %>
  <div><%= will_paginate_(@regions) %></div>
<% if @regions && @regions.size > 0 %>
	<ul>
	<% for region in @regions %>
	  <li>
      <h2><%= link_to region.name, region.friendly_identifier.blank? ? "regions/#{region.id}" : "regions/#{region.friendly_identifier}" %><%#= show_region_image(region) %></h2>
      <%#= show_region_image(region) %>
      <div><% unless region.description.blank? %>
      <%= region.description[0,250] %>
       <%- end -%>
      </div>
      <div>
      <% unless region.producers.blank? %>
      Producers in this region : <%- region.producers.each do |p| -%>
            <%= p.name %>
          <%- end -%>
       <% else %>
       No Producers from this region
       <% end %>
      </div>
      <table width="100%" class="foot">
        <tr>

          <td align="right">

          </td>
        </tr>
      </table>
    </li>
  <% end %>
  </ul>
