<%- @breadcrumbs = "#{link_to("Home", root_url)} &raquo; #{link_to("Regions", regions_path)}" -%>

<% @about = AboutU.find(:first, :conditions => {:link_type => "region"} ) %>
<div id="blog_home">

  <span class="title">
    <%= @about.title if @about %>
