<% @title = "Ask our Experts";
   @description = "Andreaâ€™s Wine Blog, The Italian Wine Blog, A Guide to Italian Wines, Journey Through Italian Wines";
   @keys = "Wine Blog,Italian Wine Blog,Italian Red and White Wine,Italian Food,Wine Tasting,Wine Expert"
%>
<%- @breadcrumbs = "#{link_to("Home", root_url)} &raquo; #{link_to('Community',wine_community_path)} &raquo; #{link_to("Ask our Experts", site_faqs_path)}".html_safe() -%>

<% @about = AboutU.find(:first, :conditions => {:link_type => "faqs"} ) %>

<div id="blog_home">
  
  <% if !@about.nil? %>
    <% unless @about.title.blank? %>
      <span class="title">
        <div style="color:white;width:350px;height:100px;background:black;opacity: 0.6;filter:alpha(opacity=40);text-align:left">
          <%= @about.title %>
         </div>
      </span>       
    <% end %>
  <% end %>
  
  <% if  @about and !@about.image_id.nil? %>
    <%= link_to image_tag(site_image_url('region_card', @about.image, :jpg),:alt=>@about.title), site_search_index_path(:id => "producers") unless @about.blank? %>
  <% else %>
    <%= image_tag("blog_home.jpg",:alt=>'Producers') %>
  <% end %>
</div>
<div id="blog_container">
  <%= show_messages(flash[:notice]) %>
  <div style="clear:both;"></div>
  <br />
  <br />
  <% if @faqs && @faqs.size > 0 %>
      <ul>
        <% for faq in @faqs %>
            <li>
              <h2><span style="color:red">Q&nbsp;</span><%=  faq.question %></h2>
              <div style="font-size:10px;">Asked by : <%= link_to faq.user.name, site_customer_path(faq.user.id) %></div><br />
              <span style="color:red;font-size:14px;font-weight:bold;">A&nbsp;</span><%= faq.answer %>
              <!-- h3>&nbsp;</h3 -->
              <!-- table width="100%" class="foot">
                <tr><td></td></tr></table -->
            </li>
        <% end %>
      </ul>
      <div style="float:left;margin-top:40px;"><%= will_paginate_(@faqs).html_safe %>
      </div>
  <% end %>
  <div style="clear:both;"></div>
  <div style="float:right"><%#= render :partial => '/site/shared/social_bookmarks' %></div><br /><br />
</div>
<!-- div style="border-bottom:1px solid #CCCCCC;margin-top:20px;"></div -->
<% if logged_in? %>
    <%= render :partial =>'new'%>
<% else %>
    <div style="border-bottom:1px solid #CCCCCC;background-color:#F3F8DA;color:#161616;font-size:1.3em;margin-top:8px;padding:1px 0 0 8px;">
      <h1>Type your question</h1>
      <p style = "font:bold 16px Arial;"><%= link_to("Login", login_path) %> ||
        <%= link_to "Register", "/signup" %> </p>
    </div>
<% end %>
<% content_for :right do %>
    <%= render :partial => '/site/shared/box_grape_guide' %>
    <br />
    <%#= render :partial => 'box_most_read_blog' %>
    <!-- br / -->
    <%= render :partial => '/site/shared/box_subscriptions' %>
    <br />
    <%= render :partial => '/site/shared/social_follow' %>
    <%#= render :partial => 'box_popular_tags' %>
    <!-- br / -->
    <%#= render :partial => 'box_latest_blog_comments' %>
    <!-- br / -->
    <%#= render :partial => 'box_archives' %>
<% end %>

