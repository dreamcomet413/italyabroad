<%- @title = "Messages"; @class = "no-padding" -%>
<%- @breadcrumbs = "#{link_to "Home", root_url} &raquo;Messages" -%>

<div id="header"><%= render :partial => 'site/shared/box_login' %></div>
<h4 class="account-title">Messages</h4>
<%= content_tag(:div, will_paginate(@messages), :style => "margin:10px 20px;") if @messages.size > 0  %>
<ul style="padding:0;list-style:none;" id="my_reviews_list">
   <%= render :partial => 'message', :collection => @messages %>
</ul>

<%- content_for :right do -%>
  <%= render :partial => '/site/shared/box_subscriptions' %>
<%- end -%>

