<div class="block" id="box_blog">
	<h1><%= link_to "Andrea's Blog", "/site/blog" %></h1>
	<br />
	<% post = Post.find(:first, :order => "created_at DESC", :limit => 1) %>
	<% if post %>
	<ul>
	  <li>
  		<span class="title"><%= link_to post.name, site_blog_path(post) %></span>
      <div class="teaser" style="padding-top:5px;"><%= post.description_short[0..200].html_safe() %>... <%= link_to "(Continue reading)", site_blog_path(post) %></div>
    </li>
  </ul>
	<% end %>
</div>