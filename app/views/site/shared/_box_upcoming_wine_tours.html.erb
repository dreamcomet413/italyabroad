<% products = Product.find(:all, :limit => 2, :include => {:categorizations => :category}, :conditions => ["categories.name LIKE ? AND DATE(date) > ?" ,'Wine Tours',Date.today],:order=>'date') %>
<% unless products.blank? %>
<div class="block" id="box_upcoming_wine_tours">
  <h1><%= link_to"Upcoming Tours","/wine-tours" %></h1>
  <ul>
    <%- products.each do |product| -%>
    <li style="margin-bottom:10px;">
  	  <%= link_to product.name, nested_products_uri(product), :style => "font-size:14px;color:#9b0707" %><br />
      <span id = "upcomming_tours_date"><%= product.date.strftime("%d %B %Y") if product.date %><br /></span>
    </li>
    <%- end -%>
  </ul>
</div>
<% end %>

