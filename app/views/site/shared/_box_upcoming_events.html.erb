<% products = Product.find(:all, :limit => 2, :include => {:categorizations => :category}, :conditions => ["categories.name LIKE ? AND DATE(date) > ?" ,'Events',Date.today],:order =>'date') %>
<% unless products.blank? -%>
<div class="block" id="box_upcoming_wine_tours">
  <h1><%= link_to"Upcoming Events","/wine-events",:alt=>'Upcoming Events',:title=>'Upcoming Events' %></h1>
  <ul>
    <%- products.each do |product| -%>
    <li style="margin-bottom:10px;">
      <span id = "upcomming_tours_date"><%= product.date.strftime("%d %B %Y at %H:%M") if product.date %></span><br />
  	  <%= link_to product.name, "/wine-events/#{product.friendly_identifier}", :style => "font-size:14px;color:#9b0707" %>
    </li>
    <%- end -%>
  </ul>
</div>
<%- end -%>

