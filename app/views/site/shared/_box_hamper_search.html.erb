        <div class="panel">
          <div class="panel-heading" role="tab" id="headingFiv">
            <h4 class="panel-title">
              <a class="" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                Occasion: <i></i>
              </a>
            </h4>
          </div>
          <div id="collapseFive" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingFive">
            <div class="panel-body">
              <ul>
                <%= hidden_field_tag :occasion_id %>
                <% @occasions = Occasion.find(:all,:include=>'products',:conditions=>['products.active = ?',true]) %>
                <% @occasions.collect{|i| [i.name,i.id]}.each do |item| %>
                  <li><a href="#." value="<%= item[1] %>"> <%= item[0] %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
