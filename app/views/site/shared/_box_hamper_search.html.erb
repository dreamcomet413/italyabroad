<%- @category ||= Category.find(params[:category] || "hampers") -%>
<%- @parent = Category.find(params[:parent] || "hampers") -%>
<%- search_url = @category == @parent ? site_search_index_path(:id => @parent) : nested_categories_url(@parent, @category) -%>
<div class="block" id="box_hamper_search">
  <div class="green-heading-16">Gift Finder</div>
  <% form_tag search_url, :method => :get do %>
    <div class="left-bar-search">
      <%= text_field_tag :text, params[:text], :id => "search_text" %>
      <i class="magnifier"><%= image_submit_tag "magnifier.png" %><%= hidden_field_tag :id,@category.name.downcase %><a href="#."></i>
    </div>
    <!-- start search filter-->
    <div class="sidebar-filter-wrapper">
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <div class="panel">
          <div class="panel-heading" role="tab" id="heading-1">
            <h4 class="panel-title">
              <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-1" aria-expanded="true" aria-controls="collapse-1">
                Producer: <i></i>
              </a>
            </h4>
          </div>
          <div id="collapse-1" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading-1">
            <div class="panel-body">
              <ul>
                <%= hidden_field_tag :producer_id %>
                <% @category.products.producers.inject([["Any", ""]]) { |ps, p| ps << [p.name, p.id] }.each do |item| %>
                  <li><a href="#." value="<%= item[1] %>"> <%= item[0] %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div class="panel">
          <div class="panel-heading" role="tab" id="headingTwo">
            <h4 class="panel-title">
              <a class="" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                Organic: <i></i>
              </a>
            </h4>
          </div>
          <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
            <div class="panel-body">
              <ul>
                <li>
                  <%= hidden_field_tag :organic %>
                  <span><%= check_box_tag :organic %></span>
                  <span>Organic</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="panel">
          <div class="panel-heading" role="tab" id="headingThree">
            <h4 class="panel-title">
              <a class="" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                Vegan: <i></i>
              </a>
            </h4>
          </div>
          <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingThree">
            <div class="panel-body">
              <ul>
                <li>
                  <%= hidden_field_tag :vegetarian %>
                  <span><%= check_box_tag :vegetarian %></span>
                  <span>Vegan:</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
