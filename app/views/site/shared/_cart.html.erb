<div class="hide-tablet cart-top">
	<div class="cart_main"><%= image_tag "cart-icon.png", alt: "Cart", title:"Cart"  %></div>
	<div class="total">
	    <div class="">
	    	<strong><%= @cart.items.size.to_i %></strong> item(s)   -  Sub Total: 
	    	<%- if @cart.items.size > 0 -%>
	    		<strong class="item-total">
	    			<%= number_to_currency(@cart.sub_total, :unit => "£") %>
				</strong>	
			<%- end -%>
	    </div>
	    <div class="checkout"><%= link_to "Checkout", cart_index_path, :title=>"Checkout" %></div>
	</div>
	<div class="clearfix"></div>
</div>
<div class="hide-desktop cart-top">
  <div class="cart"><%= image_tag "cart-icon-small.png", alt: "Cart", title:"cart" %></div>
  <div class="total">
      <div><strong><%= @cart.items.size.to_i %></strong> item(s)  -  Sub Total: 
      	<% if @cart.items.size > 0 %>
    		<strong class="item-total">
	    		<%= number_to_currency(@cart.sub_total, :unit => "£") %>
			</strong>
      	<% end %>
    	</div>
      <div class="checkout"><%= link_to "Checkout", cart_index_path, :title=>"Checkout" %></div>
  </div>
  <div class="clearfix"></div>
</div>
