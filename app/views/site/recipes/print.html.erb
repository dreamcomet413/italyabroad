<h2><%= @recipe.name %></h2>
<div style="padding:5px;text-align:center">
	<div style="text-align:justify">
		<%= image_tag "/resources/images/#{@recipe.image_1.id}.jpg" %>
	</div>
	<% if @recipe.product %>
	
	<div style="border-bottom:1px solid #c1d830;padding:30px 0px 5px 0px; width:250px;margin:0 auto">
		<h3>Ingredients</h3>
	</div>
	<div style="padding:10px 0px 5px 0px"><%= @recipe.ingredients.gsub("\n","<br />") %></div>
	<div style="border-bottom:1px solid #c1d830;padding:30px 0px 5px 0px; width:250px;margin:0 auto">
		<h3>Preparation</h3>
	</div>
	<div style="padding:10px 0px 5px 0px"><%= @recipe.preparation.gsub("\n","<br />") %></div>
	<div style="text-align:center;padding-top:20px;font-size:12px"><b>Recommended Wine:</b> <%= link_to @recipe.product.name, :controller => :products, :action => :show, :id => @recipe.product %></div>
	<% end %>
</div>