<div class="col-md-9">
  <!-- Start Product list wrapper-->
  <div class="prdouct-list-wrapper hampers-wrapper-2">
    <div class="green-heading-with-border">
      <%page =  request.url%>
      <%if page.include?('food')%>
        Food
      <%elsif page.include?('wine') %>
        Wine
      <%elsif page.include?('hamper') %>
        Hampers
      <%elsif page.include?('other') %>
        Other Drinks
      <%end%>
    </div>
    <!-- Start product list-->
    <div class="product-list bottom-30">
      <div class="row clearfix">
        <%# products = Product.find(:all, :limit => 3, :order => "created_at DESC", :conditions => "id IN (#{@category.all_products_ids.join(',')}) AND quantity > 0") %>
        <% condition = "active" %>
        <% condition += " AND id IN (#{@category.all_products_ids.join(',')})" unless @category.all_products_ids.blank? %>
        <% products = Product.find(:all, :limit => 3, :conditions => condition) %>
        <%- products.each do |product| -%>
        <%unless product.is_landscape%>
          <div class="col-md-4 portrait">
            <div class="slider-box">
              <div class="row clearfix">
                <div class="col-xs-4 box-image"><%= link_to show_image_tag(product.layout_image, product.image_1, :jpg,product.name),nested_products_uri(product)  %></div>
                <div class="col-xs-8 slider-box-text">
                  <div class="item-name">
                    <%= link_to truncate(product.name, :length => 60), nested_products_uri(product) %><br />
                    <%# product.description_short[0..70].html_safe() %>       
                  </div>
                </div>
                <div class="clr"></div>
                <div class="clearfix">
                  <div class="col-xs-4"></div>
                  <div class="col-xs-8 top-minus-15">
                    <div class="seller-price">
                      <% if product.product_prices.present? %>
                        <% product.product_prices.each do |p| %>
                          <p>
                            <%= number_to_currency p.price, :unit => "&pound;" %>
                          </p>
                        <% end %>
                      <% end %>
                    </div>
                    <%- if product.out_of_stock? -%>
                      <div class="add-row clearfix">
                        <%= image_tag('out_of_stock.png') %>
                      </div>
                    <%- else -%>
                      <div class="add-row clearfix">
                        <%=render partial: 'site/templates/product_cart_form' ,  locals: {product: product} %>
                      </div>  
                    <%- end -%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%else%>
          <div class="col-md-4 landscape">
            <div class="slider-box2">
              <div class="box-image">
                <%= link_to show_image_tag(product.layout_image, product.image_1, :jpg,product.name),nested_products_uri(product)  %>
              </div>
              <div class="item-name"><%= link_to truncate(product.name, :length => 65), nested_products_uri(product) %></div>
              <div class="row clearfix">
                <div class="col-xs-4"></div>
                <div class="col-xs-8">
                  <div class="seller-price">
                    <% if product.product_prices.present? %>
                      <% product.product_prices.each do |p| %>
                        <p>
                          <%= number_to_currency p.price, :unit => "&pound;" %>
                        </p>
                      <% end %>
                    <% end %>
                  </div>
                  <%- if product.out_of_stock? -%>
                    <div class=" add-row clearfix"> 
                      <%= image_tag('out_of_stock.png') %>
                    </div>
                  <%- else -%>
                    <div class=" add-row clearfix">
                      <%=render partial: 'site/templates/product_cart_form' ,  locals: {product: product} %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      <%- end -%>
    </div>
  </div> <!-- End product list-->
  <%= render :partial => '/site/templates/category' %>
  </div><!-- End product list Wrapper-->
</div>
</div>
</div><!-- End category content-->
<!-- start 3 colum  boxes-->
<div class="community-row clearfix row">
  <%= render :partial => '/site/shared/our_community' %>
  <%= render :partial => '/site/shared/wine_club' %>
  <%= render :partial => '/site/shared/cercavino' %>
</div><!-- start 3 colum  boxes-->
