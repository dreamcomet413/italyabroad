<div style="margin:5px;text-align:justify;margin-right:15px;">
  <%= @category.description.html_safe() %>
</div>

<div style="clear:both;">
</div>
<% products = @category.products.where(["active = ? AND DATE(date) >= ?", true, Date.today]).order("date").paginate(:page => params[:page], :per_page => 4).uniq %>
<div id="featured_events"  style="text-align:justify;margin-right:15px;">
  <br />

  <% if products.size > 0  -%>
      <h3>Coming Events</h3>
  <% end  %>

  <ul>
    <% for product in products %>
        <li>
          <%= product.date.strftime("%d %B %Y at %H:%M") if product.date -%>
          <h1><%= link_to product.name, "/wine-events/#{product.friendly_identifier}", :style => "color:black;" %></h1>
          <%#= product.description_short.gsub("\n","<br />") %><%#= link_to "(More info)", "wine-events/#{product.friendly_identifier}" %>

          <!-- <br /><br />-->
          <%= product.description_short.html_safe() %>
          <div style="font-size:18px;color:#9b0707;text-align:right;">
            <!--Price:&nbsp;--><%= number_to_currency product.price, :unit => "&pound;" %><br />
            <% if product.quantity and product.quantity > 0 %>
                <%= link_to(image_tag("buttons/add_to_cart_button.png"), "/site/cart?product_id=#{product.id}", :remote => true, :method => :post) %>
            <% else %>
                <span style="color:red;font-size:14px;">Sorry no places left</span>
            <% end %>
          </div>

        </li>
    <% end %>
    <% products = @category.products.where(["active = ? AND DATE(date) >= ?", true, Date.today]).order("date").paginate(:page => params[:page], :per_page => 4)%>
    <%= will_paginate(products) %>
  </ul>
</div>

