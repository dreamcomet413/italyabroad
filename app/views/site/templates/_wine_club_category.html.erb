 <!-- start content-->
<div class="row">
  <div class="two-colum-row clearfix">
    <div class="col-md-3 left-side-bar">
      <%= render :partial => '/site/shared/box_wine_club_testimonials' %>
    </div>
    <div class="col-md-9">
      <div class="red-heading">
        <% unless @category.page_heading.blank? %>
          <%= @category.page_heading %>
        <% else %>
          <%= @category.name %>
        <% end %>
      </div>
      <div>
        <% products = Product.find(:all, :limit => 2, :include => {:categorizations => :category}, :conditions => ["categories.name LIKE ? AND DATE(date) > ? AND active" ,'Events',Date.today],:order =>'date') %>
        <% unless products.blank? -%>
          <div style="margin:6px;float:left;margin-right:20px;">
            <%= render :partial => '/site/shared/box_upcoming_events' -%>
          </div>
        <% end %>
      </div>
      <div>
        <p>
          <%= @category.description.html_safe() %>
        </p>
      </div>
      <div class="wine-club-option-wrapper">
        <% products = @category.products.where(["active = ?", true]).order("name ASC ").paginate(:page => params[:page], :per_page => 3) %>
        <%- unless products.blank? -%>
          <div class="red-heading">Wine Club Options</div>
          <%- products.each do |product| -%>
            <div class="wine-club-box">
              <div class="row clearfix">
                <div class="col-md-2">
                  <div class="box-image"><img src="images/club-img-01.png" class="club image"></div>
                </div>
                <div class="col-md-10">
                  <div class="green-heading-24"><%= link_to product.name, nested_products_uri(product), :class => "product_title" %></div>
                  <div class="club-detail">
                    <%= product.description_short.html_safe() %>
                    <% if product.product_prices.present? %>
                      <% product.product_prices.each do |p| %>
                        <div style="margin-bottom:15px;">
                          <%= number_to_currency p.price, :unit => "&pound;" %><br />
                        </div>
                      <% end %>
                    <% end %>
                    <div><a href="#.">Discover more</a></div>
                  </div>
                  <div class="club-btn">
                    <div class="green-button"><%= link_to(image_tag("buttons/add_to_cart_button.png"), "/site/cart?product_id=#{product.id}", :remote => true, :method => :post) %></div>
                  </div>
                </div>
              </div>
            </div>
          <%- end -%>
        </div>
        <%= will_paginate(products) %>
        <%- end -%>
      </div>
    </div>
  </div>

<% products = @category.products.where(["active = ?", true]).order("name ASC ").paginate(:page => params[:page], :per_page => 3) %>
<%- unless products.blank? -%>
    <div id="featured_wine_tours" style="margin:6px;text-align:justify;margin-right:20px;">
      <br />
      <h3>Wine Club Options</h3>
      <ul>
        <%- products.each do |product| -%>
            <li class="product_listing">
              <h1><%= link_to product.name, nested_products_uri(product), :class => "product_title" %></h1>
              <div><%= product.description_short.html_safe() %></div>
              <div style="font-size:18px;color:#9b0707;text-align:right;">
                <% if product.product_prices.present? %>
                  <% product.product_prices.each do |p| %>
                  <div style="margin-bottom:15px;">
                    <%= number_to_currency p.price, :unit => "&pound;" %><br />
                  </div>
                  <% end %>
                <% end %>
                <%= link_to(image_tag("buttons/add_to_cart_button.png"), "/site/cart?product_id=#{product.id}", :remote => true, :method => :post) %>
              </div>
            </li>
        <%- end -%>
      </ul>
      <%# products = @category.products.find(:all, :conditions => ["active = ?", true], :order => "price ASC ").paginate(:page => params[:page], :per_page => 3) %>
      <%= will_paginate(products) %>
    </div>
<%- end -%>
