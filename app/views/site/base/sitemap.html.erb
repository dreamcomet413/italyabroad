<% @title = "Italyabroad.com sitemap"; @class = "sitemap no-padding"; @breadcrumbs = "#{link_to("Home", root_url)} &raquo; Sitemap" %>

<div id="header" class="green-heading-with-border">Sitemap</div>
<div class="full-width">
  <div class="">
    Please use our sitemap to help guide your way around italyabroad.com. If you have any trouble finding a particular product, please don't hesitate to <%= link_to 'Contact us',contact_us_path %>
  </div>
  <div class="section-box">
    <div class="green-heading-with-border">
      Useful pages and information
    </div>
    <div class="row clearfix site-map-box">
      <div class="col-xs-4">
        <div class="links-heading">About Us</div>  
        <ul>
          <li><%= link_to "Who we are", about_us_path %></li>
          <li><%= link_to "Our principles and philosophy", our_principles_path %></li>
          <li><%= link_to "Meet us", meet_us_path %></li>
          <li><%= link_to "Contact us", contact_us_path %></li>
          <li><%= link_to "Wholesale", wholesale_enquiry_path %></li>
          <li><%= link_to "Corporate services", corporate_path %></li>
        </ul>
      </div>
      <div class="col-xs-4">
        <div class="links-heading">Community</div>
        <ul>
          <li><%= link_to "Andrea's Blog", site_blog_index_path %></li>
          <li><%= link_to "Forum", forums_path %></li>
          <li><%= link_to "Latest entries", posts_path %></li>
          <li><%= link_to "Browse threads", forums_path %></li>
          <li><%= link_to "Our members" %></li>
          <li><%= link_to "Testimonial", testimonial_path %></li>
        </ul>
      </div>
      <div class="col-xs-4">
        <div class="links-heading">Help</div>
        <ul>
          <li><%= link_to "Terms & Conditions", terms_and_conditions_path %></li>
          <li><%= link_to "Privacy Policy ", privacy_policy_path %></li>
          <li><%= link_to "Delivery service", delivery_services_path %></li>
          <!--<li><%#= link_to "Managing account", managing_account_path %></li>-->
          <li><%= link_to "Contact details", contact_details_path %></li>
          <li><%= link_to "Sitemap", sitemap_path %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="section-box-2">
    <div class="green-heading-with-border">
      Browse by categories
    </div>
    <div class="row clearfix site-map-box">
      <% for category in Category.find(:all, :conditions => ["parent_id is ? AND show_in_menu = ?", nil, true] ) do %>
        <div class="col-xs-4">
          <div class="links-heading"><%= link_to category.name, "/#{category.friendly_identifier == "events" ? "wine-events" : category.friendly_identifier}" %></div>
          <%- unless category.children.blank? -%>
            <ul>
              <%- for child in category.children -%>
                <% num_products = 0 %>
                <% for p in child.products %>
                  <% num_products = num_products + 1 if p.active == true %>
                <% end %>
                <li><%= link_to(child.name, nested_categories_url(category, child)) if num_products > 0 %></li> <!--  if child.products.size > 0-->
              <%- end -%>
              <li><%= link_to("Special Offers", nested_categories_url(category, "offer"),:type => "special_offer")  %></li>
            </ul>
          <%- end -%>
        </div>
      <% end %>
    </div>
  </div>
</div>
