<% @title = "Our principles and philosophy" %>
<% @class = "about-us no-padding" %>
<% @breadcrumbs = "#{link_to("Home", root_url)} &raquo; About us &raquo; Our principles and philosophy" %>
<% @about = AboutU.find(:first, :conditions => {:link_type => "pricipal and philosophy"} ) %>

<!-- start main banner-->
<% if @about.image %>
	<div class="main-banner"><img src="<%= @about.image.image_filename %>" alt="about us"></div>
<% end %>
<!-- end main banner-->
<div id="header"><strong>Italyabroad.com</strong>-About us</div>
<div style="margin:20px;">
  <% if @about %>
  <h2><%= @about.title.html_safe  %></h2>
  <%= @about.description.html_safe  %>
  <% else %>
        <p style="padding:30px 0 30px 0;text-align:center;font: bold 16px Arial">Coming soon...</p>
      <% end %>
</div>

<% content_for :right do %>
  <%= render :partial => 'site/shared/box_about_us' %>
  <br />
  <%= render :partial => '/site/shared/social_follow' %>
<% end %>

