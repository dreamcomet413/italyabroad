          <%= link_to((image_tag(@setting.home_image_2.image_filename.url, :title=>@setting.home_image_2_title, :alt=>@setting.home_image_2_title) || @setting.home_image_2_title), (@setting.home_image_2_url || root_url), :title=>@setting.home_image_2_title) %>
        </div>
        <% end %>
        <% if @setting.home_image_3 %>
