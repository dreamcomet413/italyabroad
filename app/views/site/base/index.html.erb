<%= render :partial => '/site/shared/box_welcome' %>
<div id="bottomTextBox">
  <div id="favWine">
    <h3>Featured Wines</h3>
    <%= image_tag "featuredWineImg.jpg", :style => "padding-bottom: 20px;" %>
    <% category_wine = Category.find(:first, :conditions => ["name like (?) AND parent_id is ?","%wine%", nil]) %>
    <% wines = Product.find(:all, :limit => 5, :order => "RAND()", :conditions => "id IN (#{category_wine.all_products_ids.join(',')}) AND active = true AND featured = true") %>
    <ul>
      <% for wine in wines %>
        <li class="faveWineIcon">
          <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
              <td><%= link_to wine.name, nested_products_uri(wine)  %></td>
              <td align="right"><span style="color:#721041;">
                  <% if wine.discount > 0 %>

                    <%= number_to_currency wine.price_discounted, :unit => "&pound;" %>
                  <% else %>
                    <%= number_to_currency wine.price, :unit => "&pound;" %></span>
                <% end %>
              </td>

            </tr>
            <tr><td colspan="2"><hr style="color: #c5d1c5;" /></td></tr>
          </table>
        </li>
      <% end %>
    </ul>
  </div>
  <div id="favFood">
    <h3>Food Counter</h3>
    <%= image_tag "featuredFoodImg.jpg", :style => "padding-bottom: 20px;" %>
    <% category_food = Category.find(:first, :conditions => ["name like (?) AND parent_id is ?", "%food%", nil]) %>
    <% foods = Product.find(:all, :limit => 5, :order => "RAND()", :conditions => "id IN (#{category_food.all_products_ids.join(',')}) AND active = true AND featured = true") %>
    <ul>
      <% for food in foods %>
        <li class="faveWineIcon">
          <table width="100%" cellpadding="0" cellspacing="0" border="0">
            <tr>
              <td><%= link_to food.name, nested_products_uri(food) %></td>
              <td align="right"><span style="color:#721041;">
                  <% if food.discount > 0 %>
                    <%= number_to_currency food.price_discounted, :unit => "&pound;" if food %>
                  <% else %>
                    <%= number_to_currency food.price, :unit => "&pound;" if food %>
                  <% end %>

                </span></td>
              <!--<hr />-->
            </tr>
            <tr><td colspan="2"><hr style="color: #c5d1c5;" /></td></tr>
          </table>
        </li>
      <% end %>
    </ul>
  </div>
</div>

