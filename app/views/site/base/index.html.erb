
<%  @description = @setting.home_page_meta_description; @keys = @setting.home_page_meta_key %>
<%- @breadcrumbs = "Welcome to Italyabroad.com" -%>
  <!-- start carousel-->
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
