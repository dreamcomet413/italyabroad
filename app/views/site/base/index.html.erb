<div id="favWine">
  <table style="width:100%;">
    <tr>
      <td colspan="4">
        <h3 style="text-align: left">Recommended Wines</h3>
      </td>
    </tr>
    <tr>
      <% @recommended_wines.each do |wine| %>
          <td>
            <table>
              <tr>
                <td colspan="2" class="recWine" style="width:25%">
                  <%= link_to show_image_tag(wine.layout_image, wine.image_1, :jpg, wine.name), nested_products_uri(wine) %>
                  <%#= link_to show_image_tag(:card, wine.image_1, :jpg, wine.name), nested_products_uri(wine), {:title => wine.name} %>
                </td>
              </tr>
              <tr>
                <td colspan="2" class="recWineName" style="width:25%">
                  <%= wine.name -%>
                  <br /><p><%= number_to_currency wine.price, :unit => "&pound;" -%></p>
                </td>
              </tr>
            </table>
          </td>
      <% end %>
    </tr>
    <tr>
      <td colspan="4">
        <h3 style="text-align: left">Food Counter</h3>
      </td>
    </tr>
    <% @food_counter.each do |food| %>
        <td>
          <table>
            <tr>
              <td colspan="2" class="recWine" style="width:25%">
                <%= link_to show_image_tag(:card, food.image_1, :jpg, food.name), nested_products_uri(food),{:title => food.name} %>
              </td>
            </tr>
            <tr>
              <td colspan="2" class="recWineName" style="width:25%">
                <%= food.name -%>
                <br /><p><%= number_to_currency food.price, :unit => "&pound;" -%></p>
              </td>
            </tr>
          </table>
        </td>
    <% end %>
    </tr>
    <tr>
      <td colspan="4">
        <h3 style="text-align: left">Best Seller</h3>
      </td>
    </tr>
    <tr>
      <% if !@best_sellers.blank? %>
          <% @best_sellers.each do |food| %>
              <td>
                <table>
                  <tr>
                    <td colspan="2" class="recWine" style="width:25%">
                      <%= link_to show_image_tag(:card, food.image_1, :jpg, food.name), nested_products_uri(food),{:title => food.name} %>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2" class="recWineName" style="width:25%">
