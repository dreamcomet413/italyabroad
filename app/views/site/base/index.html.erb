          <%= link_to((image_tag(@setting.home_image_3.image_filename.url, :title=>@setting.home_image_3_title, :alt=>@setting.home_image_3_title) || @setting.home_image_3_title), (@setting.home_image_3_url || root_url), :title=>@setting.home_image_3_title) %>
