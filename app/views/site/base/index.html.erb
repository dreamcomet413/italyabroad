  </div><!-- End Carousel-->
  <!-- start 3 colum guide boxes-->
  <div class="guide-row row clearfix">
    <%= render :partial => '/site/shared/box_grape_guide' %>
    <%= render :partial => '/site/shared/box_mood' %>
    <%= render :partial => '/site/shared/box_cercavino' %>
  </div><!-- end 3 cloum guide boxes-->
  <!-- Start Best Seller-->
  <div class="best-seller-wrapper">
    <h2>BEST SELLERS</h2>
    <!-- Start Slider-->
    <!-- Add Arrows -->
    <div class="pagi-arrow">
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
    <div class="swiper-container best-seller-swiper" id="firstSwiper">
      <div class="swiper-wrapper">
        <% if !@best_sellers.blank? %>
          <% @best_sellers.each do |food| %>
            <%path = thumb_image(food)%>
            <%unless food.is_landscape%>
              <div class="swiper-slide portrait">
                <div class="slider-box clearfix ">
                  <div class="col-xs-4">
                    <%= link_to image_tag(path, :title=> food.name, :alt=> food.name), nested_products_uri(food),{:title => food.name} %>
                  </div>
                  <div class="col-xs-8 slider-box-text">
                    <div class="item-name"><%= link_to truncate(food.name, length:60), nested_products_uri(food), :title=> food.name -%></div>
                  </div>
                  <div class="clr"></div>
                  <div class="celarfix">
                    <div class="col-xs-4 price-col">
                      <div class="price">
                        <% product = food
                          if product.product_prices.present? %>
                              <% if product.discounted? && product.discount > 0.0 %>
                                <% product.product_prices.each do |pp| %>
                                 <div class="line-through">
                                  Was <%= number_to_currency pp.price, :unit => "&pound;" %></div>
                                <% end %>
                                <div class="current-price">
                                  <% product.price_discounted.each do |price| %>
                                    <%= number_to_currency price, :unit => "&pound;" %>
                                  <% end %>
                                </div>
                              <% else %>
                                <div class="price">
                                  <% product.product_prices.each do |pp| %>
                                    <%= number_to_currency pp.price, :unit => "&pound;" %>
                                  <% end %>
                                  </div>
                              <% end %>
                            <% end %>
                      </div>
                    </div>
                    <div class="col-xs-8">
                      <div class="seller-price">
                        <% if food.present? && food.product_prices.present? %>
                          <% food.product_prices.each do |best_food| %>
                            <div class="add-row clearfix">
                              <%=render partial: 'site/templates/product_cart_form' ,  locals: {product: food} %>
                            </div>
                        <% end %>
                        <% else %>
                          <p class="red-text">Not Available</p>
                        <% end %>
                      </div>
                    </div>
                  </div>  
                </div>
              </div>
            <%else%>  
              <div class="swiper-slide landscape">
                <div class="slider-box2 clearfix ">
                  <div class="">
                    <div class="box-image"><%= link_to image_tag(path, :title=> food.name, :alt=> food.name), nested_products_uri(food),{:title => food.name} %></div>
                    <div class="item-name"><%= link_to truncate(food.name, length:65), nested_products_uri(food), :title => food.name  -%></div>
                    <div class="row clearfix">
                      <div class="col-xs-4 price-col">
                        <% product = food 
                           if product.product_prices.present? %>
                              <% if product.discounted? && product.discount > 0.0 %>
                                <% product.product_prices.each do |pp| %>
                                 <div class="line-through">
                                  Was <%= number_to_currency pp.price, :unit => "&pound;" %></div>
                                <% end %>
                                <div class="current-price">
                                  <% product.price_discounted.each do |price| %>
                                    <%= number_to_currency price, :unit => "&pound;" %>
                                  <% end %>
                                </div>
                              <% else %>
                                <div class="price">
                                  <% product.product_prices.each do |pp| %>
                                    <%= number_to_currency pp.price, :unit => "&pound;" %>
                                  <% end %>
                                  </div>
                              <% end %>
                            <% end %>
                      </div>
                      <div class="col-xs-8">
                        <div class="seller-price">
                          <% if food.present? && food.product_prices.present? %>
                            <% food.product_prices.each do |best_food| %>
                              <div class="add-row clearfix">
                                <%=render partial: 'site/templates/product_cart_form' ,  locals: {product: food} %>
                              </div>
                          <% end %>
                          <% else %>
                            <p class="red-text">Not Available</p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <% end %>
        <% end %>
      </div>
    </div><!-- End Slider-->
  </div><!-- End Best Seller-->
  <!-- Start Blog and wine club-->
  <div class="row clearfix">
    <div class="col-md-6 blog-row sm-bottom-60">
      <h2>BLOG</h2>
      <%if @post%>
        <div class="medium-box">
          <div class="row clearfix">
            <%blog_home = SmallBoxSetting.find_by_box_title("blog_home")%>
            <%if blog_home and blog_home.image%>

              <div class="col-xs-6">
                <%= link_to image_tag(blog_home.image.image_filename.try(:url), :title => @post.friendly_identifier, :alt => @post.friendly_identifier), site_blog_path(:id => @post.friendly_identifier), :title => @post.friendly_identifier -%>
