<% @title = "Order Confirmation"; %>
<% form_tag( {:action => :update_gift}, :id => "form_submit" ) do %>

		<div id="header">Gift Options</div>
<div style="margin:10px 20px;"><br />
		<div>Create a fantastic hamper or the perfect gift by simply choosing from the gift options below and donâ€™t forget to write the message for the card.</div>
		<table border="0" cellspacing="5" cellpadding="5" style="font-size:12px;margin-top:15px" >
     <% index = 0 %>
			<% for gift_option in GiftOption.find(:all) %>

			<% if @cart.gift.present? and !@cart.gift[:gift_option_id].blank?
			  if @cart.gift[:gift_option_id].to_i == gift_option.id.to_i
			  checked =  true
        else
        checked =  ""
			end end %>
			<tr>
				<td>
				<% if @cart.gift.present? and @cart.gift[:gift_option_id].blank? and index == 0
          checked =  true
          index = index + 1
        end %>

				<%= radio_button :gift, :gift_option_id, gift_option.id,:checked=>checked %>
				<% if @cart.gift.present? and  @cart.gift[:gift_option_id].blank? and index > 0
				  checked =  ""
				 end %>
				</td>
				<td>
					<div style="font-size:11px;font-weight:bold">
						<%= gift_option.name %>
						<% if gift_option.price > 0  %>
						(<span style="color:red"><%= number_to_currency(gift_option.price,:unit => "&pound;") %></span>)
						<% end %>
						<%#= hidden_field :gift,:price ,:value=>gift_option.price %>
					</div>
					<div style="font-size:11px"><%= gift_option.description %></div>
				</td>
			</tr>
			<% end %>
		</table>
		<div style="margin-top:40px;margin-bottom:10px">Write your <b>free</b> gift note here:</div>
		<div><%= text_area :gift, :note, :style => "width:90%", :rows => 5 %></div>

		<div style="text-align:center;margin-top:40px;"><%= image_tag("cart_step_1.png") %></div>
  <%= render :partial => 'site/shared/box_cart_form' %>

	<div style="text-align:right;font-size:10px;padding-top:10px;">
		<div style="float: right;padding-right: 10px;">
		<%= image_submit_tag("buttons/continue_button.png") %>		
	    </div>
	    <div style="float: right;padding-right: 10px;">
	    <%= link_to image_tag("buttons/back_button.png"), :controller=>'cart',:action=>'index' %>
	    </div>
		<%#= submit_tag("BACK", :onclick => "window.location = '#{url_for(:action => :check_out)}';return false") %>
		<%#= submit_tag("BACK") %>
		<%#= link_to image_tag("buttons/continue_shopping_button.png"), continue_shopping_cart_path %>


	</div>
<% end %>
<% content_for :right do %>
<%= render :partial => '/site/shared/box_subscriptions' %>
  <br />
  <%= render :partial => '/site/shared/box_popular' %>
  <br />
  <%= render :partial => '/site/shared/social_follow' %>
	<%#= render :partial => '/site/shared/box_login' %>
	<%#= render :partial => '/site/shared/box_wine_club' %>
	<%#= render :partial => '/site/shared/box_top_mixed' %>
	<%#= render :partial => '/site/shared/box_fast_track' %>
	<%#= render :partial => '/site/shared/box_subscriptions' %>
	<%#= render :partial => '/site/shared/box_grape_guide' %>
<% end %>

</div>

